def test_data_dir = "${launchDir}/tests/data/"
def nf_core_modules_data = "https://raw.githubusercontent.com/nf-core/modules/master/tests/data/"

try {
    includeConfig "https://github.com/nf-core/modules/blob/master/tests/config/test_data.config"
} catch (Exception e) {
    System.err.println("WARNING: Could not load nf-core/modules test data config")
}

params {
    test_data {
        'nf-core' {
            test_paired_end_sorted_bam = "${nf_core_modules_data}/genomics/sarscov2/illumina/bam/test_paired_end.sorted.bam"
            genome_fasta               = "${nf_core_modules_data}/genomics/sarscov2/genome/genome.fasta"
            genome_sizes               = "${nf_core_modules_data}/genomics/sarscov2/genome/genome.sizes"
            'bed' {
                test_bed               = "${nf_core_modules_data}/genomics/sarscov2/genome/bed/test.bed"
                test2_bed              = "${nf_core_modules_data}/genomics/sarscov2/genome/bed/test2.bed"
            }
        }
        'grohmm' {
            s0mR1                      = "https://raw.githubusercontent.com/Kraus-Lab/groHMM/master/inst/extdata/S0mR1.bam"
            s40mR1                     = "https://raw.githubusercontent.com/Kraus-Lab/groHMM/master/inst/extdata/S40mR1.bam"
        }
    }
}
